<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_SampleTextControl.MainPage"
              
             xmlns:controls="clr-namespace:MAUI_SampleTextControl">

    <ScrollView>
        <VerticalStackLayout
             
            Padding="30,0"
            VerticalOptions="Center" Spacing="40">
            <Entry Text="{Binding Path=Name}"/>

            <controls:UTextBox Message="{Binding Path=Name}"/>

            <Label Text="{Binding Path=Name }"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
