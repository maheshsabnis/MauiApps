<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_LyoutControl.MainPage">

    <!--Absolute Layout: An AbsoluteLayout positions and sizes children using absolute device-independent values.-->
    <!--Using absolute values for positioning and sizing children can be problematic, because different devices have different screen sizes and resolutions. Therefore, the coordinates for the center of the screen on one device may be offset on other devices.-->
    <AbsoluteLayout BackgroundColor="Navy">
        <BoxView Color="Red"
                        AbsoluteLayout.LayoutBounds="100, 50, 150, 200">
            <BoxView.Opacity>0.4</BoxView.Opacity>
        </BoxView>
        <BoxView Color="Yellow"
                        AbsoluteLayout.LayoutBounds="300, 50, 150, 300" />
    </AbsoluteLayout>

    <!--Ends-->  

</ContentPage>
